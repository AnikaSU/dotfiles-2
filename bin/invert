#! /bin/bash
if [ -z "${1}" ]
then
	echo "Try to invert"
    pkill compton
    ID=$(xdotool getactivewindow)
    CLASS=$(xprop -id "$ID"  | grep "WM_CLASS" | awk '{print $4}')
    COND="class_g=${CLASS}"
    compton --invert-color-include "$COND" --config ~/.compton &
else
	echo "Already inverted"
    pkill compton
    compton --config ~/.compton &
fi
exit

