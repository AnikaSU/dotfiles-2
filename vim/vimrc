" general {{{
syntax on
let g:vim_data_path = expand("$HOME") . "/.vim/data/"
" }}}


" shell {{{
set shell=/bin/bash
" }}}

" startup {{{
" vundle
set nocompatible  " be iMproved
filetype off      " required!

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

filetype plugin indent on     " required!


" other scripts
source ~/.vim/startup/options.vim
source ~/.vim/startup/plugins.vim
source ~/.vim/startup/mappings.vim
source ~/.vim/startup/autocmd.vim
source ~/.vim/startup/bundle.vim
source ~/.vim/startup/auto.vim
" }}}


" colorscheme {{{
colorscheme Monokai
hi Normal ctermbg=NONE
hi NonText ctermbg=NONE
hi TabLineFill ctermfg=8 ctermbg=7
hi TabLine ctermfg=8  ctermbg=7
hi TabLineSel ctermfg=15 ctermbg=0
hi SignColumn ctermbg=NONE
set foldcolumn=1
hi foldcolumn ctermbg=NONE
" Match arbitrary highlighted colors
hi currawong ctermbg=12
match currawong /.*\*\*$/
" }}}
