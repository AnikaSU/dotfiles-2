#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# Make sure this is before the 'exec' command or it won't be sourced.
[ -f /etc/xprofile ] && source /etc/xprofile
[ -f ~/.xprofile ] && source ~/.xprofile

export DE=xfce
export PATH="${PATH}:/home/samim/.bin"

# Keyboard layout
setxkbmap -layout us,ir -option 'grp:shift_toggle'
setxkbmap -option caps:ctrl_modifier
perWindowLayoutD

# Disable touchpad taps while typing
# syndaemon -t -k -i 1 &

# Set background
[ -e ~/.fehbg ] && source ~/.fehbg

# Hide mouse when not used
unclutter &

dunst &

# Picom window compositor
/usr/bin/picom -b --config ~/.compton &

# screen powersave
xset +dpms
xset dpms 0 0 300

# Automount disks
# udiskie --no-tray &

greenclip daemon &

xrdb -merge ~/.Xresources

trayer --edge top --align right --SetDockType true --SetPartialStrut true \
  --expand true --width 4 --transparent true --alpha 0 --tint 0x00000000 --height 20\
  --monitor 1 &

nm-applet &

exec xmonad
